#include <iostream>
using namespace std;
int main() {
	int T;
	cin>>T;
	while(T--){
	    int N,A,B,count1=0,count2=0;
	    cin>>N>>A>>B;
	    string S;
	    cin>>S;
	    for(int i=0;i<N;i++){
	        if(S[i]=='0'){
	            count1++;
	        }
	        else{
	            count2++;
	        }
	    }
	    cout<<(A*count1)+(B*count2)<<endl;
	}
	return 0;
}
