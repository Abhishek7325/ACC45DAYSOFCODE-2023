#include <iostream>
using namespace std;
int main() {
	int T;
	cin>>T;
	while(T--){
     int N,even=0,odd=0;
     cin>>N;
     int A[N];
	   for(int i=0;i<N;i++){
		     cin>>A[i];
	   }
	   for(int i=0;i<N;i++){
		     if(A[i]%2==0){
			        even++;
		     }
		     else{
			       odd++;
		     }
	   }
	   if(odd>=2&&odd%2==0){
	      	cout<<"YES"<<endl;
	   }
	   else{
		     cout<<"NO"<<endl;
	   }
	}
	
	return 0;
}
