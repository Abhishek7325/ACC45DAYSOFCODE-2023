#include <iostream>
#include<string>
using namespace std;
int main() {
    int T;
    cin>>T;
    while(T--){
        int N,count1=0,count2=0,count3=0;
        cin>>N;
        string S;
        cin>>S;
        for(int i=0;i<N;i++){
            if(S[i]=='0'){
                count1++;
            }
            else{
                count2++;
            }
        }
        if(count1==N||count2==N){
            cout<<0<<endl;
        }
        else{
            for(int i=0;i<N-1;i++){
                    if(S[i]=='1'&&S[i+1]=='0'){
                          count3++;
                    }
            }
           cout<<count3<<endl;
        }
   }
	return 0;
}
