#include <iostream>
using namespace std;
int main() {
    int T;
    cin>>T;
    while(T--){
        int N;
        cin>>N;
        if(N==1){
            cout<<0<<endl;
        }
        else{
            int i=2,count=0;
             while(i<=N){
                count++;
                i=i+7;
             }
             cout<<count<<endl;
      }
   }
	return 0;
}
